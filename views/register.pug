<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Login Form</title>
      style
        include form.css
   </head>
   <body>
      <h1 id="pageTitle" data-title=#{content}></h1>
      script
        include confirmation.js 
      <div id="Z">
         <div id="container">
            <h1><b>Login</b></h1>
         </div>
         <form action="/login" method="post">
            <div id="A">
               <label for="name">Name:</label>
               <input type="text" id="name" name="name" placeholder="Enter your name">
               <br/>
               <br/>
               <label for="emailID">Email ID:</label>
               <input type="email" id="emailID" name="emailID" placeholder="Enter your email ID">
               <br/>
               <br/>
               <label for="phoneNumber">Phone No:</label>
               <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="Enter your number">
               <br/>
               <br/>
               <label for="DOB">Enter Date of Birth:</label>
               <input type="date" name="DOB" id="DOB">
            </div>
            <br>
            <div id="B">
               <br/>
               <br/>
               <label for="counter">Experience (in years):</label>
               <input type="number" name="counter" id="counter" min="0" max="50">
               <br/>
               <br/>
               <fieldset>
                  <legend>Skills</legend>
                  <input type="checkbox" name="HTML" id="checkbox1">
                  <label for="checkbox1">HTML</label>
                  <input type="checkbox" name="CSS" id="checkbox2">
                  <label for="checkbox2">CSS</label>
                  <input type="checkbox" name="JavaScript" id="checkbox3">
                  <label for="checkbox3">JavaScript</label>
               </fieldset>
            </div>
            <br/>
            <div id="C">
               <label for="educationType">Highest Education:</label>
               <select name="educationType" id="educationType">
                  <option value="choose">Choose</option>
                  <option value="a">A</option>
                  <option value="b">B</option>
                  <option value="c">C</option>
                  <option value="d">D</option>
                  <option value="e">E</option>
               </select>
               <br/>
               <br>
               <fieldset>
                  <legend>Availability:</legend>
                  <label for="radio1">Full-time</label>
                  <input type="radio" name="radio" id="radio1">
                  <br/>
                  <label for="radio2">Part-time</label>
                  <input type="radio" name="radio" id="radio2">
                  <br/>
               </fieldset>
               <br>
               <label for="textarea1">Additional Comments:</label>
               <br/>
               <textarea name="textarea1" id="textarea1" cols="60" rows="20"></textarea>
            </div>
            <br/>
            <br>
            <input type="submit" value="Submit" id="submit">
            <input type="reset" value="Reset" id="reset">
         </form>
      </div>
   </body>
</html>
